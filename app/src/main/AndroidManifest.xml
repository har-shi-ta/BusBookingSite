            android:name="com.example.pizzahut.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
             android:name=".ChoiceActivity"/>
        <activity
            android:name=".MarSmallActivity"/>
        <activity
            android:name=".MarMediumActivity"/>
        <activity
            android:name=".MarLargeActivity"/>
         <activity 
             android:name="MarJumboActivity"/>
    </application>

</manifest>
